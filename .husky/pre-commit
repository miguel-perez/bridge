#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Check if we're in a CI environment (skip some checks)
if [ "$CI" = "true" ]; then
    echo "âš ï¸  CI environment detected, skipping pre-commit checks"
    exit 0
fi

# Check if user wants to bypass (with permission)
if [ "$SKIP_PRE_COMMIT" = "true" ]; then
    echo "âš ï¸  Pre-commit checks bypassed (SKIP_PRE_COMMIT=true)"
    echo "   This should only be used in emergencies with explicit permission!"
    exit 0
fi

# Function to handle errors
handle_error() {
    echo "âŒ Pre-commit check failed: $1"
    echo ""
    echo "ğŸ’¡ To bypass this check (emergency only):"
    echo "   SKIP_PRE_COMMIT=true git commit"
    echo ""
    echo "ğŸ’¡ To fix the issues:"
    echo "   npm run lint:fix    # Fix linting issues"
    echo "   npm test           # Run tests"
    echo "   npm run type-check # Check types"
    echo "   npm run build      # Build project"
    exit 1
}

# 1. Type checking
echo "ğŸ“ Checking TypeScript types..."
npm run type-check || handle_error "TypeScript type checking failed"

# 2. Linting
echo "ğŸ§¹ Running ESLint..."
npm run lint || handle_error "ESLint found issues"

# 3. Markdown linting
echo "ğŸ“– Checking markdown files..."
npm run lint:md || handle_error "Markdown linting failed"

# 4. Build verification
echo "ğŸ”¨ Building project..."
npm run build || handle_error "Build failed"

# 5. Unit tests
echo "ğŸ§ª Running unit tests..."
npm test || handle_error "Unit tests failed"

echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit!"
