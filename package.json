{
  "name": "bridge",
  "version": "0.1.0",
  "description": "MCP server for capturing and analyzing experiential data",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bridge": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild dist/index.js --bundle --platform=node --target=node18 --format=esm --outfile=dist/bundle.js --external:onnxruntime-node --external:@xenova/transformers",
    "build:all": "npm run build && npm run bundle",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:bridge": "npx tsx src/scripts/bridge-test.ts",
    "test:integration": "npx tsx src/scripts/bridge-test.ts",
    "test:fixtures": "npx tsx src/scripts/test-fixtures.ts",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test:unit -- --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "validate:manifest": "node src/scripts/test-dxt-manifest.cjs",
    "build:dxt": ".\\build-dxt.ps1",
    "build:dxt:unix": "./build-dxt.sh",
    "migrate-schema": "tsx src/scripts/migrate-schema.ts",
    "migrate-embeddings-consolidation": "tsx src/scripts/migrate-embeddings-consolidation.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "experience",
    "capture",
    "reflection"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@apidevtools/json-schema-ref-parser": "^14.1.1",
    "@modelcontextprotocol/sdk": "latest",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^17.1.0",
    "nanoid": "^5.1.5",
    "stopwords": "^0.0.9",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0"
  }
}
